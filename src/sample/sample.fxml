<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="sample.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
        <TextField fx:id="fieldInput" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="4" GridPane.rowSpan="1"></TextField>
        <Button fx:id="buttonOne" GridPane.columnIndex="0" GridPane.rowIndex="1" text="1" GridPane.fillHeight="true" GridPane.fillWidth="true"></Button>
        <Button fx:id="buttonTwo" GridPane.columnIndex="1" GridPane.rowIndex="1" text="2"></Button>
        <Button fx:id="buttonThree" GridPane.columnIndex="2" GridPane.rowIndex="1" text="3"></Button>
        <Button fx:id="buttonDivide" GridPane.columnIndex="3" GridPane.rowIndex="1" text="/"></Button>
        <Button fx:id="buttonFour" GridPane.columnIndex="0" GridPane.rowIndex="2" text="4"></Button>
        <Button fx:id="buttonFive" GridPane.columnIndex="1" GridPane.rowIndex="2" text="5"></Button>
        <Button fx:id="buttonSix" GridPane.columnIndex="2" GridPane.rowIndex="2" text="6"></Button>
        <Button fx:id="buttonMulti" GridPane.columnIndex="3" GridPane.rowIndex="2" text="*"></Button>
        <Button fx:id="buttonSeven" GridPane.columnIndex="0" GridPane.rowIndex="3" text="7"></Button>
        <Button fx:id="buttonEight" GridPane.columnIndex="1" GridPane.rowIndex="3" text="8"></Button>
        <Button fx:id="buttonNine" GridPane.columnIndex="2" GridPane.rowIndex="3" text="9"></Button>
        <Button fx:id="buttonMinus" GridPane.columnIndex="3" GridPane.rowIndex="3" text="-"></Button>
        <Button fx:id="buttonDot" GridPane.columnIndex="0" GridPane.rowIndex="4" text="."></Button>
        <Button fx:id="buttonZero" GridPane.columnIndex="1" GridPane.rowIndex="4" text="0"></Button>
        <Button fx:id="buttonEqual" GridPane.columnIndex="2" GridPane.rowIndex="4" text="=" onAction="#solve"></Button>
        <Button fx:id="buttonPlus" GridPane.columnIndex="3" GridPane.rowIndex="4" text="+"></Button>
</GridPane>